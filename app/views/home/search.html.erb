<h1>Search Results</h1>

<h2> Forum Posts </h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="title"><%= link_to post.title, post %></td>
        <td class="body"><%= post.body %></td>
        <% if false %>
        <td><%= link_to 'Show', post %></td>
        <% if user_signed_in? && can?(:manage, post) %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% end %>
        <td><small>Posted by <%= post.user&.full_name || "[DELETED]" %></small></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2> Stories </h2>

<table class="container">
  <thead>
    <tr class="row">
      <th class="col-4">Title</th>
      <th class="col-4">Snippet</th>
      <th class="col-1"></th>
      <th class="col-1"></th>
      <th class="col-1"></th>
      <th class="col-1"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr class="row">
        <td class="col-4 title"><%= link_to story.title, story %></td>
        <td class="col-4 body"><%= story.body %></td>
        <% if false %>
        <td class="col-1"><%= link_to 'Show', story %></td>
        <% if user_signed_in? && can?(:manage, story) %>
        <td class="col-1"><%= link_to 'Edit', edit_story_path(story) %></td>
        <td class="col-1"><%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% end %>
        <td class="col-1"><small>Posted by <%= story.user&.full_name || "[DELETED]" %></small></td>
      </tr>
    <% end %>
  </tbody>
</table>

