<h1>Editing Comment</h1>

<%= @comment.body %>

<% if false %>
<%= form_for comment_path(@comment), method: :patch do |form| %>
    <div>
        <% if @comment.errors.present?%>
        <%= @comment.errors.full_messages.join(', ')%>
        <% end %>
    </div>
    <div>
        <%= form.label :body %><br>
        <%= form.text_area :body, cols: 50, rows:5%>
    </div>
    <br>
    <%= form.submit %>
    
    <% end %>
  <% end %>


